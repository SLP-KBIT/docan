<%= error_messages(member, "alert alert-danger") %>

<%= form_for member, url: { action: 'create' }, html: { class: 'form-horizontal' } do |form| %>
  <div class="form-group">
    <%= form.label :name, '名前', class: 'col-md-3' %>
    <div class="col-md-5">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :account, 'アカウント名', class: 'col-md-3' %>
    <div class="col-md-5">
      <%= form.text_field :account, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :password, 'パスワード', class: 'col-md-3' %>
    <div class="col-md-5">
      <%= form.password_field :password, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :password_confirmation, 'パスワード(確認)', class: 'col-md-3' %>
    <div class="col-md-5">
      <%= form.password_field :password_confirmation, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :is_admin, '管理者権限', class: 'col-md-3' %>
    <div class="col-md-1">
      <%= form.check_box :is_admin, class: 'form-control'%>
    </div>
  </div>
  <%= form.submit class: "btn btn-info", value: '登録' %>
<% end %>
