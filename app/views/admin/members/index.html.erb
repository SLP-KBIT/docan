<h1>メンバー一覧</h1>
<%= link_to "新規作成", { action: "new" }, html_options = { class: "btn btn-primary" } %>
<hr>

<table class="table table-hover table-bordered" >
  <thead>
    <td>名前</td>
    <td>アカウント名</td>
    <td>管理者</td>
  </thead>
  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.account %></td>
        <td><%= member.is_admin? %></td>
      </tr>
    <% end %>
  </tbody>
</table>
